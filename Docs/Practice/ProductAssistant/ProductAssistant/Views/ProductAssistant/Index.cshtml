@Scripts.Render("~/bundles/jquery","~/bundles/product")

<div>
    <h1>Product accounting system</h1>
    <div id="ProductListBlock">
    </div>
    <div id="editProduct">
        <table>
            <tr>
                <td>
                    <input id="editId" type="hidden"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Name: </label><input id="editName" type="text"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Price: </label><input id="editPrice" type="number"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Category: </label><input id="editCategory" type="text"/>
                </td>
            </tr>
            <tr>
                <td>
                    <button id="updateProduct">Save</button>
                </td>
            </tr>
        </table>
    </div>
</div>